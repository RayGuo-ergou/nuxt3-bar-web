// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// document type enum
enum DocumentType {
  NEW
  OLD
}

// a use schema 
// id as primary key
// first name, last name, email, phone number
model Enquirer {
  id        Int        @id @default(autoincrement())
  name      String
  email     String
  phone     Int
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  feedbacks Feedback[]

  @@unique([email, phone], name: "Enquirer_email_phone")
}

// a feedback schema
// link to user
model Feedback {
  id         Int      @id @default(autoincrement())
  enquirer   Enquirer @relation(fields: [enquirerId], references: [id])
  enquirerId Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  text       String
}

// content docs (events)
// https://content.nuxtjs.org/guide/writing/markdown/
model document {
  id           Int          @id @default(autoincrement())
  title        String
  description  String
  draft        Boolean      @default(false)
  navigation   Boolean      @default(true)
  content      String
  author       String
  type         DocumentType @default(NEW)
  thumbnail    String
  externalLink String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

// subscriber schema
// ppl who subscribe to the newsletter via mailchimp
model subscriber {
  id        Int      @id @default(autoincrement())
  email     String
  firstName String
  lastName  String
  phone     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
